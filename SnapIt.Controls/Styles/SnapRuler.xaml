<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="clr-namespace:SnapIt.Controls">
    <!--  xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"  -->

    <Style TargetType="{x:Type control:SnapRuler}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type control:SnapRuler}">
                    <Grid>
                        <Grid.Children>
                            <Line
                                x:Name="verticalTrackLine"
                                Width="100"
                                Margin="-1,0,0,0"
                                Stroke="#FFFFFFFF"
                                StrokeThickness="2"
                                Visibility="Hidden"
                                X1="300" />
                            <Line
                                x:Name="horizontalTrackLine"
                                Height="100"
                                Margin="-1,0,0,0"
                                Stroke="#FFFFFFFF"
                                StrokeThickness="2"
                                Visibility="Hidden"
                                Y1="300" />
                        </Grid.Children>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>