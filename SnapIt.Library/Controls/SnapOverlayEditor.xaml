<UserControl
    x:Class="SnapIt.Library.Controls.SnapOverlayEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">

    <Grid x:Name="Overlay" Opacity="{Binding Theme.Opacity, FallbackValue=0.85}">
        <Grid
            x:Name="MiniOverlay"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{Binding Theme.OverlayBrush, FallbackValue=#FF636363}">
            <Border
                x:Name="Border"
                BorderBrush="{Binding Theme.BorderBrush, FallbackValue=#FFC8C8C8}"
                BorderThickness="{Binding Theme.BorderThickness, FallbackValue=1}" />
            <materialDesign:PackIcon
                x:Name="MergedIcon"
                Width="64"
                Height="64"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="{Binding Theme.BorderBrush, FallbackValue=#FFC8C8C8}"
                Kind="ArrowExpandAll"
                Visibility="{Binding IsMergeIconHidden, Converter={StaticResource EqualVisibilityConverter}, ConverterParameter={StaticResource TrueValue}}" />
        </Grid>

        <Grid x:Name="FullOverlay">
            <Border
                x:Name="FullOverlayBorder"
                BorderBrush="{Binding Theme.BorderBrush, FallbackValue=#FFC8C8C8}"
                BorderThickness="{Binding Theme.BorderThickness, FallbackValue=1}" />

            <Grid
                x:Name="DesignPanel"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Panel.ZIndex="99">
                <Button
                    x:Name="MergeButton"
                    Width="48"
                    Height="48"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Panel.ZIndex="999"
                    Background="White"
                    Foreground="Black"
                    Style="{StaticResource MaterialDesignIconForegroundButton2}">
                    <materialDesign:PackIcon Kind="Remove" />
                </Button>
            </Grid>
        </Grid>
    </Grid>
</UserControl>