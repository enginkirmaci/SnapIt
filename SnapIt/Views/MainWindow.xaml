<Window
    x:Class="SnapIt.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:SnapIt.Resources;assembly="
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:vm="clr-namespace:SnapIt.ViewModels"
    x:Name="MainWindowView"
    Title="{Binding Title}"
    Width="900"
    Height="680"
    d:DataContext="{d:DesignInstance vm:LayoutDesignView,
                                     IsDesignTimeCreatable=True}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{StaticResource MaterialDesignFont}"
    Style="{DynamicResource WindowStyle}"
    TextElement.FontSize="14"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Activated">
            <i:InvokeCommandAction Command="{Binding ActivatedCommand}" CommandParameter="{Binding ElementName=MainWindowView}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <materialDesign:ColorZone
            Padding="0,12,0,0"
            DockPanel.Dock="Top"
            Mode="PrimaryMid">
            <DockPanel>
                <StackPanel Orientation="Vertical">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="24"
                        Text="{x:Static c:Constants.AppName}" />

                    <materialDesign:ColorZone Margin="0,8,0,0" Mode="PrimaryMid">
                        <StackPanel Margin="2,2,2,0" Orientation="Horizontal">
                            <RadioButton
                                Height="40"
                                Margin="4,2"
                                IsChecked="True"
                                Style="{StaticResource MaterialDesignTabRadioButton}">
                                <RadioButton.Content>
                                    <materialDesign:PackIcon Kind="HomeOutline" />
                                </RadioButton.Content>
                            </RadioButton>
                            <RadioButton
                                Height="40"
                                Margin="4,2"
                                Command="{Binding NavigateCommand}"
                                CommandParameter="LayoutView"
                                IsChecked="False"
                                Style="{StaticResource MaterialDesignTabRadioButton}">
                                <RadioButton.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Margin="0,0,4,0" Kind="BorderAll" />
                                        <TextBlock Text="LAYOUT" />
                                    </StackPanel>
                                </RadioButton.Content>
                            </RadioButton>
                            <RadioButton
                                Height="40"
                                Margin="4,2"
                                Command="{Binding NavigateCommand}"
                                CommandParameter="SettingsView"
                                IsChecked="False"
                                Style="{StaticResource MaterialDesignTabRadioButton}">
                                <RadioButton.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Margin="0,0,4,0" Kind="SettingsOutline" />
                                        <TextBlock Text="SETTINGS" />
                                    </StackPanel>
                                </RadioButton.Content>
                            </RadioButton>
                            <RadioButton
                                Height="40"
                                Margin="4,2"
                                Command="{Binding NavigateCommand}"
                                CommandParameter="WindowsView"
                                IsChecked="False"
                                Style="{StaticResource MaterialDesignTabRadioButton}">
                                <RadioButton.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Margin="0,0,4,0" Kind="WindowRestore" />
                                        <TextBlock Text="WINDOWS" />
                                    </StackPanel>
                                </RadioButton.Content>
                            </RadioButton>
                            <RadioButton
                                Height="40"
                                Margin="4,2"
                                Command="{Binding NavigateCommand}"
                                CommandParameter="AboutView"
                                IsChecked="False"
                                Style="{StaticResource MaterialDesignTabRadioButton}">
                                <RadioButton.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Margin="0,0,4,0" Kind="InformationVariant" />
                                        <TextBlock Text="ABOUT" />
                                    </StackPanel>
                                </RadioButton.Content>
                            </RadioButton>
                        </StackPanel>
                    </materialDesign:ColorZone>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>

        <ToggleButton
            Margin="12"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            IsChecked="{Binding IsDarkTheme}"
            Style="{StaticResource MaterialDesignSwitchAccentToggleButton}">
            <materialDesign:PackIcon Margin="-1,-2,0,0" Kind="WhiteBalanceSunny" />
            <materialDesign:ToggleButtonAssist.OnContent>
                <materialDesign:PackIcon Margin="-1,-2,0,0" Kind="Brightness2" />
            </materialDesign:ToggleButtonAssist.OnContent>
        </ToggleButton>

        <Grid
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            WindowChrome.IsHitTestVisibleInChrome="True">
            <Button
                materialDesign:ShadowAssist.ShadowDepth="Depth0"
                Command="{Binding CloseWindowCommand, Mode=OneWay}"
                CommandParameter="{Binding ElementName=MainWindowView}"
                ContentTemplate="{DynamicResource CloseBtnContentTemplate}" />
        </Grid>

        <ContentControl
            Grid.Row="1"
            Margin="12"
            prism:RegionManager.RegionName="{x:Static c:Constants.MainRegion}" />
    </Grid>
</Window>