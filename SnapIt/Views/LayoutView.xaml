<UserControl
    x:Class="SnapIt.Views.LayoutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:SnapIt.Resources;assembly="
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SnapIt.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:snapcontrols="clr-namespace:SnapIt.Library.Controls;assembly=SnapIt.Library"
    xmlns:vm="clr-namespace:SnapIt.ViewModels"
    d:DataContext="{d:DesignInstance vm:LayoutDesignView,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="480"
    d:DesignWidth="600"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{StaticResource MaterialDesignFont}"
    TextElement.FontSize="14"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">

    <Grid>
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="200" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel>
                <TextBlock
                    Margin="0,6"
                    Style="{StaticResource MaterialDesignTitleTextBlock}"
                    Text="Screens" />

                <ListBox
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Top"
                    ItemsSource="{Binding SnapScreens}"
                    SelectedItem="{Binding SelectedSnapScreen, Mode=TwoWay}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <materialDesign:PackIcon
                                    Width="60"
                                    Height="60"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Kind="Monitor" />
                                <TextBlock
                                    Margin="0,-8,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource MaterialDesignHeadlineTextBlock}"
                                    Text="{Binding DeviceNumber}" />
                                <StackPanel Grid.Row="1">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                        Text="{Binding Resolution}" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                        Text="{Binding Primary}"
                                        Visibility="{Binding Primary, TargetNullValue=Collapsed}" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                        Text="{Binding Layout.Name}" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemContainerStyle>
                        <Style BasedOn="{StaticResource MaterialDesignListBoxItem}" TargetType="ListBoxItem">
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{StaticResource PrimaryHueMidBrush}" />
                                    <Setter Property="Foreground" Value="{StaticResource PrimaryHueMidForegroundBrush}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock
                    Margin="0,6"
                    Style="{StaticResource MaterialDesignTitleTextBlock}"
                    Text="Layouts" />

                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button
                        Height="40"
                        Margin="0,0,4,0"
                        Command="{Binding NewLayoutCommand}"
                        FontSize="14"
                        Foreground="{DynamicResource SecondaryAccentBrush}"
                        Style="{StaticResource MaterialDesignFlatButton}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="22"
                                    Height="22"
                                    Kind="Add" />
                                <TextBlock
                                    Margin="8,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="New" />
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Button
                        Height="40"
                        Margin="0,0,4,0"
                        Command="{Binding ImportLayoutCommand}"
                        FontSize="14"
                        Foreground="{DynamicResource SecondaryAccentBrush}"
                        Style="{StaticResource MaterialDesignFlatButton}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    Width="22"
                                    Height="22"
                                    Kind="Import" />
                                <TextBlock
                                    Margin="8,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Text="Import" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>

                <ListBox
                    Grid.Row="1"
                    ItemsSource="{Binding Layouts}"
                    SelectedItem="{Binding SelectedLayout, Mode=TwoWay}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                <snapcontrols:SnapArea
                                    Width="256"
                                    Height="192"
                                    LayoutArea="{Binding LayoutArea}" />

                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="{StaticResource PrimaryHueMidForegroundBrush}"
                                    Style="{StaticResource MaterialDesignHeadlineTextBlock}"
                                    Text="{Binding Name}" />

                                <materialDesign:PopupBox
                                    Margin="0,6"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Foreground="{StaticResource PrimaryHueMidForegroundBrush}"
                                    PopupMode="Click">
                                    <StackPanel>
                                        <Button
                                            Command="{Binding DataContext.DesignLayoutCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Content="Open in Designer" />
                                        <Separator />
                                        <Button
                                            Command="{Binding DataContext.OpenRenameDialogCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Content="Rename" />
                                        <Button
                                            Command="{Binding DataContext.DeleteLayoutCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Content="Delete" />
                                        <Button
                                            Command="{Binding DataContext.ExportLayoutCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Content="Export" />
                                    </StackPanel>
                                </materialDesign:PopupBox>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemContainerStyle>
                        <Style BasedOn="{StaticResource MaterialDesignListBoxItem}" TargetType="ListBoxItem">
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{StaticResource PrimaryHueMidBrush}" />
                                    <Setter Property="Foreground" Value="{StaticResource PrimaryHueMidForegroundBrush}" />
                                </Trigger>
                            </Style.Triggers>
                            <Style.Resources>
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent" />
                            </Style.Resources>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>
        </Grid>

        <materialDesign:DialogHost IsOpen="{Binding IsRenameDialogOpen}" Style="{StaticResource MaterialDesignEmbeddedDialogHost}">
            <materialDesign:DialogHost.DialogContent>
                <StackPanel Width="256" Margin="16">
                    <TextBlock>
                        Layout Name
                    </TextBlock>
                    <TextBox
                        Margin="0,8,0,0"
                        HorizontalAlignment="Stretch"
                        Text="{Binding PopupLayout.Name, UpdateSourceTrigger=PropertyChanged}" />

                    <Button
                        Margin="0,8,0,0"
                        HorizontalAlignment="Center"
                        Command="materialDesign:DialogHost.CloseDialogCommand"
                        IsDefault="True"
                        Style="{StaticResource MaterialDesignFlatButton}">
                        <Button.CommandParameter>
                            <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                                True
                            </system:Boolean>
                        </Button.CommandParameter>
                        OK
                    </Button>
                </StackPanel>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>
    </Grid>
</UserControl>