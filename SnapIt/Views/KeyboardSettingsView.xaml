<Page
    x:Class="SnapIt.Views.KeyboardSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="clr-namespace:SnapIt.Library.Controls;assembly=SnapIt.Library"
    xmlns:design="clr-namespace:SnapIt.ViewModels.DesignTime"
    Title="KeyboardSettingsView"
    d:DataContext="{d:DesignInstance design:KeyboardSettingsDesignView,
                                     IsDesignTimeCreatable=True}"
    d:DesignWidth="500"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Style="{StaticResource UiPageScrollable}"
    mc:Ignorable="d">

    <StackPanel>
        <wpfui:CardControl
            Margin="0,0,0,8"
            Header="Use keyboard to snap window"
            Icon="Empty">
            <wpfui:ToggleSwitch IsChecked="{Binding EnableKeyboard}" />
        </wpfui:CardControl>

        <wpfui:CardControl Margin="0,0,0,8" Icon="Empty">
            <wpfui:CardControl.Header>
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock
                        FontSize="13"
                        FontWeight="Medium"
                        Text="Use Win shortcust to snap window" />
                    <TextBlock
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                        Text="Override default shortcuts (Win + Arrow)." />
                </StackPanel>
            </wpfui:CardControl.Header>
            <wpfui:Button
                Margin="0,0,0,8"
                HorizontalAlignment="Left"
                Appearance="Secondary"
                Command="{Binding OverrideDefaultSnapCommand}"
                Content="Apply" />
        </wpfui:CardControl>

        <wpfui:CardExpander Header="Keyboard Shortcuts" IsExpanded="True">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="92" />
                        <ColumnDefinition Width="156" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Margin="0,6" Text="Move Up" />
                    <controls:HotkeyEditorControl Grid.Column="1" Text="{Binding MoveUpShortcut, Mode=TwoWay}" />
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="92" />
                        <ColumnDefinition Width="156" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Margin="0,6" Text="Move Down" />
                    <controls:HotkeyEditorControl Grid.Column="1" Text="{Binding MoveDownShortcut, Mode=TwoWay}" />
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="92" />
                        <ColumnDefinition Width="156" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Margin="0,6" Text="Move Left" />
                    <controls:HotkeyEditorControl Grid.Column="1" Text="{Binding MoveLeftShortcut, Mode=TwoWay}" />
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="92" />
                        <ColumnDefinition Width="156" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Margin="0,6" Text="Move Right" />
                    <controls:HotkeyEditorControl Grid.Column="1" Text="{Binding MoveRightShortcut, Mode=TwoWay}" />
                </Grid>

                <TextBlock
                    Margin="0,10,0,6"
                    Text="Start/Stop SnapIt"
                    TextWrapping="Wrap" />

                <controls:HotkeyEditorControl
                    Width="156"
                    HorizontalAlignment="Left"
                    Text="{Binding StartStopShortcut}" />

                <TextBlock
                    Margin="0,10,0,6"
                    Text="Cycle through layouts for active screen"
                    TextWrapping="Wrap" />

                <controls:HotkeyEditorControl
                    Width="156"
                    HorizontalAlignment="Left"
                    Text="{Binding CycleLayoutsShortcut}" />
            </StackPanel>
        </wpfui:CardExpander>
    </StackPanel>
</Page>