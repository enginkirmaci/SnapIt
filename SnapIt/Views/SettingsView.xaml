<UserControl
    x:Class="SnapIt.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:SnapIt.Resources;assembly="
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SnapIt.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="480"
    d:DesignWidth="600"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{StaticResource MaterialDesignFont}"
    TextElement.FontSize="14"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Margin="16">
            <TextBlock
                Margin="0,6"
                Style="{StaticResource MaterialDesignTitleTextBlock}"
                Text="Mouse" />
            <TextBlock Margin="0,6">
                Use mouse to snap window
            </TextBlock>
            <ToggleButton
                Margin="0,6"
                HorizontalAlignment="Left"
                IsChecked="{Binding EnableMouse}"
                Style="{StaticResource MaterialDesignSwitchAccentToggleButton}" />

            <TextBlock Margin="0,6">
                Only use window title to snap window
            </TextBlock>
            <ToggleButton
                Margin="0,6"
                HorizontalAlignment="Left"
                IsChecked="{Binding DragByTitle}"
                Style="{StaticResource MaterialDesignSwitchAccentToggleButton}" />

            <TextBlock Margin="0,6">
                Mouse button for snapping window
            </TextBlock>
            <ComboBox
                Width="128"
                Margin="0,6"
                HorizontalAlignment="Left"
                ItemsSource="{Binding MouseButtons}"
                SelectedItem="{Binding MouseButton, Mode=TwoWay}" />
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="16">
            <TextBlock
                Margin="0,6"
                Style="{StaticResource MaterialDesignTitleTextBlock}"
                Text="Keyboard" />
            <TextBlock Margin="0,6">
                Use keyboard to snap window
            </TextBlock>
            <ToggleButton
                Margin="0,6"
                HorizontalAlignment="Left"
                IsChecked="{Binding EnableKeyboard}"
                Style="{StaticResource MaterialDesignSwitchAccentToggleButton}" />

            <TextBlock Margin="0,6">
                <Run Text="Use following shortcuts to snap window" /><LineBreak />
                <Run Text="  Ctrl + Alt + Up" /><LineBreak />
                <Run Text="  Ctrl + Alt + Down" /><LineBreak />
                <Run Text="  Ctrl + Alt + Left" /><LineBreak />
                <Run Text="  Ctrl + Alt + Right" />
            </TextBlock>
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="16">
            <TextBlock
                Margin="0,6"
                Style="{StaticResource MaterialDesignTitleTextBlock}"
                Text="Other Settings" />

            <TextBlock Margin="0,6">
                Disable snapping for fullscreen application and games (recommended)
            </TextBlock>
            <ToggleButton
                Margin="0,6"
                HorizontalAlignment="Left"
                IsChecked="{Binding DisableForFullscreen}"
                Style="{StaticResource MaterialDesignSwitchAccentToggleButton}" />

            <TextBlock Margin="0,6">
                Start Snap It when I start Windows
            </TextBlock>
            <ToggleButton
                Margin="0,6"
                HorizontalAlignment="Left"
                IsChecked="{Binding IsStartupTaskActive}"
                Style="{StaticResource MaterialDesignSwitchAccentToggleButton}" />

            <!--<TextBlock Margin="0,6">
                            Run as administrator (experimental, needs to be restarted)
                        </TextBlock>
                        <ToggleButton
                            Margin="0,6"
                            HorizontalAlignment="Left"
                            IsChecked="{Binding IsRunAsAdmin}"
                            Style="{StaticResource MaterialDesignSwitchAccentToggleButton}" />-->
        </StackPanel>
    </Grid>
</UserControl>